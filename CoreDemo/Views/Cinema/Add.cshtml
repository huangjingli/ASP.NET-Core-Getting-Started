@model Cinema
    <div class="container">
        <form asp-action="Add" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Location" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Location" type="text" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Capacity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Capacity" type="number" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
